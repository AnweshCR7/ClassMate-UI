        android:layout_height="match_parent"
        android:padding="0dp">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:scaleType="fitXY"
            />

        <!--android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"-->
